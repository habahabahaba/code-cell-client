.react_resizable_handle {
  display: flex;
  justify-content: center;
  align-items: center;
  overflow: hidden;
  border: solid 1px color-mix(in srgb, currentColor 50%, transparent);
  opacity: 0.6;
  transition: opacity 0.25s;
}
.react_resizable_handle:hover {
  opacity: 0.8;
}
.react_resizable_handle:active {
  opacity: 1;
}
.react_resizable_handle_s {
  width: 100%;
  height: 15px;
  min-height: 15px;
  cursor: row-resize;
}

.react_resizable_handle_e {
  width: 15px;
  min-width: 15px;
  height: 100%;
  cursor: col-resize;
}

:global(.handle_icon) {
  position: absolute;
}
